{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "@/utils": ["src/utils/index.ts"],
      "@/components/*": ["src/components/*.astro"],
      "@/layouts/*": ["src/layouts/*.astro"],
      "@/i18n/*": ["src/i18n/*.ts"],
      "@/styles/*": ["src/styles/*.css"],
      "@/icons/*": ["src/icons/*.svg"],
      "@/assets/*": ["src/assets/*"],
      "@/data/*": ["src/data/*"]
    }
  },
  "include": ["src", "*.ts"]
}
