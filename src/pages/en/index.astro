import BaseLayout from '@/layouts/Base'
import avatar from '@/assets/avatar.png'
import { Image } from 'astro:assets'

import Friend from '@/components/Friend'

import friends from '@/data/friends.json'
---

<BaseLayout title="Home" image={avatar}>
  <section class="relative flex flex-col">
    <div class="flex flex-col max-w-full md:max-w-[calc(100%-18rem)]">
      <h1 class="title">Hey you :3</h1>
      <p class="mb-4 sm:mb-8">
        Hello! I'm Lexedia, Lexie, Lilie, Lina and many others names lol.<br />
        I'm a developer, mainly focused on backend development, but I also like to do some frontend stuff (&lt;- me when i lie).
      </p>
    </div>
    <div class="w-full md:w-64 flex justify-center md:justify-end">
      <Image
        class="rounded-md w-64 md:w-full h-auto object-cover"
        src={avatar}
        alt='My avatar'
      />
    </div>
  </section>

  <section class="mt-8 sm:mt-16">
    <h2 class="title">What do I do?</h2>
    <p class="mb-4 sm:mb-8">
      Currently? It's complicated.<br />
      You can check all my projects <a class="anchor-link" href="/en/~projects/pages/1">here</a> though!
    </p>
  </section>

  <section class="mt-8 sm:mt-16">
    <h2 class="title">Frens</h2>
    <div class="flex flex-wrap gap-4 md:gap-5 pt-5 sm:gap-3">
      {
        friends.map((friend) => (
          <Friend {...friend} />
        ))
      }
    </div>
  </section>
</BaseLayout>
